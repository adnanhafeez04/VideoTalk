<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image_receiver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/message_profile_image_receiver"
        android:background="@drawable/receiver_messages_layout"
        android:text="Receiver messages"
        android:padding="8dp"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/time_date_text_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_message_text"
        android:layout_toEndOf="@+id/message_profile_image_receiver"
        android:text="Time and Date"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:cropToPadding="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_toEndOf="@+id/message_profile_image_receiver"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/receiver_image_message_border"
        />

    <ImageView
        android:id="@+id/message_receiver_video_view"
        android:cropToPadding="true"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_toEndOf="@+id/message_profile_image_receiver"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/receiver_image_message_border"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image_sender"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_toStartOf="@+id/message_profile_image_sender"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/sender_messages_layout"
        android:padding="8dp"
        android:text="sender messages"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/time_date_text_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_message_text"
        android:layout_toStartOf="@+id/message_profile_image_sender"
        android:text="Time and Date"
        android:textSize="10sp"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:cropToPadding="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        android:layout_toStartOf="@+id/message_profile_image_sender"
        android:background="@drawable/sender_image_message_border"
        />

    <ImageView
        android:id="@+id/message_sender_video_view"
        android:cropToPadding="true"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        android:layout_toStartOf="@+id/message_profile_image_sender"
        android:background="@drawable/sender_image_message_border"
        />

</RelativeLayout>