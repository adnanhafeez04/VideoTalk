<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@android:color/white">

    <include
        android:id="@+id/reset_password_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <ImageView
        android:id="@+id/forgot_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/login5"
        android:layout_below="@+id/reset_password_toolbar"/>

    <TextView
        android:id="@+id/forgot_instructions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot_image"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alike_angular"
        android:text="Reset your password"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/forgot_enter_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot_instructions_text"
        android:fontFamily="@font/alike_angular"
        android:text="we will send a link to reset password. Please use your valid E-mail that you have used to register your account"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reset_password_email_input"
        android:layout_below="@+id/forgot_enter_email_text"
        android:drawableEnd="@drawable/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/input2"
        android:hint="yourname@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="4dp"/>

    <Button
        android:id="@+id/reset_password_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send E-mail"
        android:textAllCaps="false"
        android:layout_below="@+id/reset_password_email_input"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        />

</RelativeLayout>