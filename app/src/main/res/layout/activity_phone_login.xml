<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:id="@+id/phone_login_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/login5" />

    <TextView
        android:id="@+id/Phone_login__text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phone_login_image"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alike_angular"
        android:text="Phone Verification"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/phone_login_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/Phone_login__text"
        android:fontFamily="@font/alike_angular"
        android:text="We will send a verification code to your phone number. Please use your own valid phone number."
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_below="@+id/phone_login_instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input3"
        android:padding="4dp"
        android:hint="Phone Number"
        android:drawableEnd="@drawable/phone"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="phone"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input3"
        android:padding="4dp"
        android:hint="0 - 0 - 0 - 0 - 0"
        android:layout_below="@id/phone_number_input"
        android:drawableEnd="@drawable/key"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_verification_code"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/verification_code_input"
        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/send_ver_code_button"
        android:visibility="invisible"
        />

</RelativeLayout>